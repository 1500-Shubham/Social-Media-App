<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SignUp"
    android:onClick="onClick"
    android:id="@+id/signuplayout">

    <ImageView
        android:id="@+id/signup"
        android:onClick="onClick"
        android:layout_width="0dp"
        android:layout_height="166dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signuplog" />


    <Button
        android:id="@+id/signupnext"
        android:layout_width="0dp"
        android:onClick="signup_next"
        android:layout_height="60dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="74dp"
        android:background="@drawable/loginbutton"
        android:text="next"
        android:textColor="@drawable/loginsignupbuttonselector"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupphone" />

    <EditText
        android:id="@+id/signupnemail"
        android:layout_width="0dp"

        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginedittext"
        android:ems="10"

        android:hint="Email Address"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupname" />

    <EditText
        android:id="@+id/signupname"
        android:layout_width="0dp"

        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginedittext"
        android:ems="10"

        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup" />

    <EditText
        android:id="@+id/signuppassword"
        android:layout_width="0dp"
        android:layout_height="66dp"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginedittext"
        android:ems="10"

        android:hint="Password (min 8:-char)"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupnemail" />

    <EditText
        android:id="@+id/signupconfirmpassword"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginedittext"

        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuppassword" />

    <EditText
        android:id="@+id/signupphone"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginedittext"

        android:ems="10"
        android:hint="Phone Number"
        android:paddingLeft="25dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/secondary_text_dark"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupconfirmpassword" />

    <TextView
        android:id="@+id/signup_login"
        android:onClick="backtologinpage"
        android:layout_width="361dp"
        android:layout_height="34dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"
        android:textColor="@drawable/signup_alreadyhaveaccount"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Already Having Account!!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupnext" />


</androidx.constraintlayout.widget.ConstraintLayout>